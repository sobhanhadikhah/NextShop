// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // @db.Text
  access_token      String? // @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}



model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  favorites     favorite[]
  Review         Review[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
}


model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int
  realPrice  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) 
  images      String?
  categories  Category[]
  favorites   favorite[]
  reviews     Review[]
  isOff       Boolean
  offPercent  Int?
}
model Category {
  id String @id @default(cuid())
  label String
  value String
  products Product[]
}
model Slider {
  id String @id @default(cuid())
  title String
  description String
  image String
}
model favorite {
  id  String @id @default(cuid())
  userId  String
  productId String
  user User @relation(fields: [userId],references: [id])
  product Product @relation(fields: [productId],references: [id])
}
